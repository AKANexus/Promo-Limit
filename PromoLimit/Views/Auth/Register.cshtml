@using Microsoft.AspNetCore.Mvc.TagHelpers;
@model PromoLimit.Views.Auth.RegisterViewModel;
@{
	ViewData["Title"] = "Login em PromoLimit";
}

<div class="text-center">
	<h4 class="display-4">Login em PromoLimit</h4>
	<form method="post">
		<h1>Preencha os dados para criar<br/> uma nova conta</h1>
		<label>Nome</label>
		<input asp-for="Nome" placeholder="Nome" required autofocus>
		<label>Usuário</label>
		<input asp-for="Username" placeholder="Usuário" required autofocus>
		<label >Senha</label>
		<input asp-for="Senha" type="password" placeholder="Senha" required>
		<label >Confirme a senha</label>
		<input asp-for="Confirmação" type="password"  placeholder="Senha" required>
		<div class="text-danger mb-3">@Html.ValidationMessage("ValidRegister")</div>
		<button type="submit">Registrar</button>
	</form>
</div>